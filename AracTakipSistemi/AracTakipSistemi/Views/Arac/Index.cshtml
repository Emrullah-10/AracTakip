@model List<AracTakipSistemi.Models.Arac>
@{
    ViewData["Title"] = "Araç Yönetimi";
}

<style>
    /* Araç Yönetimi Sapphire Nightfall Tema */
    .arac-yonetimi-container {
        background: transparent !important;
        padding: 2rem 0;
        min-height: 100vh;
        margin-top: 80px !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
    }
    
    .arac-yonetimi-container * {
        color: var(--sapphire-white) !important;
    }
    
    /* Ana Container */
    .arac-container {
        width: 100% !important;
        max-width: 1400px !important;
        margin: 0 auto !important;
        padding: 0 20px !important;
        position: relative !important;
        left: 25% !important;
        transform: translateX(-25%) !important;
        margin-bottom: 100px !important; /* Footer'dan kurtarmak için */
    }
    
    /* Hero Section */
    .page-header {
        text-align: center;
        margin-bottom: 3rem;
        padding: 2rem 0;
    }
    
    .page-header h2 {
        color: var(--sapphire-gold) !important;
        font-size: 3rem !important;
        font-weight: 700 !important;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5) !important;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, var(--sapphire-gold) 0%, var(--sapphire-turkuaz) 100%) !important;
        -webkit-background-clip: text !important;
        -webkit-text-fill-color: transparent !important;
        background-clip: text !important;
    }
    
    .page-header i {
        color: var(--sapphire-gold) !important;
        text-shadow: 0 0 20px rgba(255, 215, 0, 0.5) !important;
        margin-right: 1rem;
        animation: pulse 2s infinite;
    }
    
    /* İstatistik Kartları */
    .stats-container {
        margin-bottom: 3rem;
    }
    
    .stat-card {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.8) 0%, rgba(22, 33, 62, 0.8) 100%) !important;
        border: 2px solid var(--sapphire-accent) !important;
        border-radius: 20px !important;
        backdrop-filter: blur(15px) !important;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3) !important;
        overflow: hidden;
        transition: all 0.4s ease;
        position: relative;
    }
    
    .stat-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(233, 69, 96, 0.3);
        border-color: rgba(233, 69, 96, 0.6);
    }
    
    .stat-card .card-body {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.9) 0%, rgba(22, 33, 62, 0.9) 100%) !important;
        color: var(--sapphire-white) !important;
        padding: 2rem !important;
        text-align: center;
        position: relative;
        z-index: 1;
    }
    
    .stat-card h4 {
        font-size: 2.5rem !important;
        color: var(--sapphire-gold) !important;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5) !important;
        font-weight: 700 !important;
        background: linear-gradient(135deg, var(--sapphire-gold) 0%, var(--sapphire-turkuaz) 100%) !important;
        -webkit-background-clip: text !important;
        -webkit-text-fill-color: transparent !important;
        background-clip: text !important;
    }
    
    .stat-card p {
        color: var(--sapphire-white) !important;
        font-size: 1.1rem;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.3) !important;
        font-weight: 600 !important;
        margin-bottom: 0;
    }
    
    /* Ana Kart */
    .main-card {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.8) 0%, rgba(22, 33, 62, 0.8) 100%) !important;
        border: 2px solid var(--sapphire-accent) !important;
        border-radius: 20px !important;
        backdrop-filter: blur(15px) !important;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3) !important;
        overflow: hidden;
        margin-bottom: 2rem;
    }
    
    .main-card .card-header {
        background: linear-gradient(135deg, rgba(233, 69, 96, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
        border-bottom: 2px solid rgba(233, 69, 96, 0.3) !important;
        color: var(--sapphire-gold) !important;
        font-weight: 700 !important;
        border-radius: 18px 18px 0 0 !important;
        padding: 1.5rem 2rem !important;
    }
    
    .main-card .card-header h5 {
        color: var(--sapphire-gold) !important;
        margin-bottom: 0 !important;
        font-weight: 700 !important;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5) !important;
    }
    
    .main-card .card-body {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.9) 0%, rgba(22, 33, 62, 0.9) 100%) !important;
        color: var(--sapphire-white) !important;
        padding: 2rem !important;
    }
    
    /* Tablo Stilleri */
    .table-responsive {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    }
    
    .table {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.8) 0%, rgba(22, 33, 62, 0.8) 100%) !important;
        color: var(--sapphire-white) !important;
        margin-bottom: 0 !important;
        border: none !important;
        backdrop-filter: blur(10px);
    }
    
    .table thead th {
        background: linear-gradient(135deg, rgba(233, 69, 96, 0.3) 0%, rgba(255, 255, 255, 0.1) 100%) !important;
        color: var(--sapphire-gold) !important;
        border: 1px solid rgba(233, 69, 96, 0.3) !important;
        padding: 1rem !important;
        font-weight: 700 !important;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5) !important;
    }
    
    .table tbody tr {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.6) 0%, rgba(22, 33, 62, 0.6) 100%) !important;
        border-bottom: 1px solid rgba(233, 69, 96, 0.2) !important;
        transition: all 0.3s ease;
    }
    
    .table tbody tr:hover {
        background: linear-gradient(135deg, rgba(233, 69, 96, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%) !important;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(233, 69, 96, 0.2);
    }
    
    .table tbody td {
        padding: 1rem !important;
        border: 1px solid rgba(233, 69, 96, 0.2) !important;
        vertical-align: middle;
        color: var(--sapphire-white) !important;
        background: transparent !important;
    }
    
    .table tbody td strong {
        color: var(--sapphire-gold) !important;
        font-weight: 700 !important;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5) !important;
    }
    
    /* Badge Stilleri */
    .badge {
        font-size: 0.8rem !important;
        padding: 0.5rem 0.8rem !important;
        border-radius: 8px !important;
        font-weight: 600 !important;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5) !important;
    }
    
    .badge.bg-secondary {
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%) !important;
        color: var(--sapphire-white) !important;
    }
    
    .badge.bg-info {
        background: linear-gradient(135deg, var(--sapphire-turkuaz) 0%, #17a2b8 100%) !important;
        color: var(--sapphire-white) !important;
    }
    
    .badge.bg-warning {
        background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%) !important;
        color: #212529 !important;
    }
    
    .badge.bg-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
        color: var(--sapphire-white) !important;
    }
    
    /* Buton Stilleri */
    .btn {
        border-radius: 10px !important;
        font-weight: 600 !important;
        transition: all 0.3s ease;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.3) !important;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.3);
    }
    
    .btn-primary {
        background: linear-gradient(135deg, var(--sapphire-accent) 0%, #d63384 100%) !important;
        border: 2px solid var(--sapphire-accent) !important;
        color: var(--sapphire-white) !important;
    }
    
    .btn-primary:hover {
        background: linear-gradient(135deg, #d63384 0%, var(--sapphire-accent) 100%) !important;
        border-color: #d63384 !important;
        color: var(--sapphire-white) !important;
    }
    
    .btn-outline-info {
        background: linear-gradient(135deg, rgba(0, 206, 209, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
        border: 2px solid var(--sapphire-turkuaz) !important;
        color: var(--sapphire-turkuaz) !important;
    }
    
    .btn-outline-info:hover {
        background: linear-gradient(135deg, var(--sapphire-turkuaz) 0%, #17a2b8 100%) !important;
        border-color: var(--sapphire-turkuaz) !important;
        color: var(--sapphire-white) !important;
    }
    
    .btn-outline-primary {
        background: linear-gradient(135deg, rgba(233, 69, 96, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
        border: 2px solid var(--sapphire-accent) !important;
        color: var(--sapphire-accent) !important;
    }
    
    .btn-outline-primary:hover {
        background: linear-gradient(135deg, var(--sapphire-accent) 0%, #d63384 100%) !important;
        border-color: var(--sapphire-accent) !important;
        color: var(--sapphire-white) !important;
    }
    
    .btn-outline-danger {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
        border: 2px solid #dc3545 !important;
        color: #dc3545 !important;
    }
    
    .btn-outline-danger:hover {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%) !important;
        border-color: #dc3545 !important;
        color: var(--sapphire-white) !important;
    }
    
    /* Dropdown Stilleri */
    .dropdown-toggle {
        border: 2px solid !important;
        font-weight: 600 !important;
        border-radius: 8px !important;
    }
    
    .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
        border: 2px solid #28a745 !important;
        color: var(--sapphire-white) !important;
    }
    
    .btn-warning {
        background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%) !important;
        border: 2px solid #ffc107 !important;
        color: #212529 !important;
    }
    
    .btn-danger {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%) !important;
        border: 2px solid #dc3545 !important;
        color: var(--sapphire-white) !important;
    }
    
    .dropdown-menu {
        background: linear-gradient(135deg, var(--sapphire-primary) 0%, var(--sapphire-secondary) 100%) !important;
        border: 2px solid var(--sapphire-accent) !important;
        border-radius: 12px !important;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3) !important;
        backdrop-filter: blur(15px) !important;
    }
    
    .dropdown-item {
        color: var(--sapphire-white) !important;
        padding: 0.8rem 1.2rem !important;
        transition: all 0.3s ease;
    }
    
    .dropdown-item:hover {
        background: linear-gradient(135deg, rgba(233, 69, 96, 0.3) 0%, rgba(255, 255, 255, 0.1) 100%) !important;
        color: var(--sapphire-gold) !important;
        transform: translateX(5px);
    }
    
    /* Form Elemanları */
    .form-select, .form-control {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.8) 0%, rgba(22, 33, 62, 0.8) 100%) !important;
        border: 2px solid rgba(233, 69, 96, 0.3) !important;
        color: var(--sapphire-white) !important;
        border-radius: 10px !important;
        backdrop-filter: blur(10px) !important;
    }
    
    .form-select:focus, .form-control:focus {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.9) 0%, rgba(22, 33, 62, 0.9) 100%) !important;
        border-color: var(--sapphire-accent) !important;
        box-shadow: 0 0 0 0.2rem rgba(233, 69, 96, 0.25) !important;
        color: var(--sapphire-white) !important;
    }
    
    .form-label {
        color: var(--sapphire-gold) !important;
        font-weight: 600 !important;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5) !important;
    }
    
    /* Alert Stilleri */
    .alert {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
        border: 2px solid rgba(233, 69, 96, 0.3) !important;
        backdrop-filter: blur(10px) !important;
        color: var(--sapphire-white) !important;
        border-radius: 15px !important;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2) !important;
    }
    
    .alert-success {
        background: linear-gradient(135deg, rgba(40, 167, 69, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
        border-color: rgba(40, 167, 69, 0.5) !important;
    }
    
    .alert-danger {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
        border-color: rgba(220, 53, 69, 0.5) !important;
    }
    
    /* Checkbox Stilleri */
    input[type="checkbox"] {
        width: 18px;
        height: 18px;
        accent-color: var(--sapphire-accent);
        filter: drop-shadow(0 0 5px rgba(233, 69, 96, 0.5));
    }
    
    /* Boş Durum Kartı */
    .empty-state-card {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.8) 0%, rgba(22, 33, 62, 0.8) 100%) !important;
        border: 2px solid var(--sapphire-accent) !important;
        border-radius: 20px !important;
        backdrop-filter: blur(15px) !important;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3) !important;
    }
    
    .empty-state-card .card-body {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.9) 0%, rgba(22, 33, 62, 0.9) 100%) !important;
        color: var(--sapphire-white) !important;
        padding: 3rem !important;
        text-align: center;
    }
    
    .empty-state-card i {
        color: var(--sapphire-turkuaz) !important;
        text-shadow: 0 0 20px rgba(0, 206, 209, 0.5) !important;
        margin-bottom: 1rem;
    }
    
    .empty-state-card h4 {
        color: var(--sapphire-gold) !important;
        font-weight: 700 !important;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5) !important;
    }
    
    .empty-state-card p {
        color: var(--sapphire-white) !important;
        font-weight: 500 !important;
    }
    
    /* Animasyonlar */
    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }
    
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    /* Animasyon Uygulamaları */
    .page-header {
        animation: fadeInUp 1s ease-out;
    }
    
    .stats-container {
        animation: fadeInUp 1s ease-out 0.3s both;
    }
    
    .main-card {
        animation: fadeInUp 1s ease-out 0.6s both;
    }
    
    /* Responsive Tasarım */
    @@media (max-width: 768px) {
        .arac-yonetimi-container {
            margin-top: 60px !important;
            padding: 1rem 0;
        }
        
        .arac-container {
            padding: 0 15px !important;
            margin-left: 15% !important; /* Mobilde daha az sağa kaydırma */
            transform: translateX(5%) !important;
        }
        
        .page-header h2 {
            font-size: 2rem !important;
        }
        
        .stat-card h4 {
            font-size: 2rem !important;
        }
        
        .table {
            font-size: 0.9rem !important;
        }
        
        .table thead th,
        .table tbody td {
            padding: 0.8rem 0.5rem !important;
        }
    }
</style>

<div class="arac-yonetimi-container">
    <div class="arac-container">
        @if (TempData["Basari"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Basari"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Hata"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Hata"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="page-header">
            <h2><i class="fas fa-car me-2"></i>Araç Yönetimi</h2>
            <a href="@Url.Action("Ekle", "Arac")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Yeni Araç Ekle
            </a>
        </div>

    @if (Model != null && Model.Count > 0)
    {
        <!-- Araç İstatistikleri -->
        <div class="stats-container">
            <div class="row">
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="card-body">
                            <h4>@Model.Count</h4>
                            <p class="mb-0">Toplam Araç</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="card-body">
                            @{
                                int musaitSayisi = 0;
                                foreach (var arac in Model)
                                {
                                    if (arac.Durumu == "Müsait") musaitSayisi++;
                                }
                            }
                            <h4>@musaitSayisi</h4>
                            <p class="mb-0">Müsait</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="card-body">
                            @{
                                int bakimdaSayisi = 0;
                                foreach (var arac in Model)
                                {
                                    if (arac.Durumu == "Bakımda") bakimdaSayisi++;
                                }
                            }
                            <h4>@bakimdaSayisi</h4>
                            <p class="mb-0">Bakımda</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="card-body">
                            @{
                                int digerSayisi = 0;
                                foreach (var arac in Model)
                                {
                                    if (arac.Durumu != "Müsait" && arac.Durumu != "Bakımda") digerSayisi++;
                                }
                            }
                            <h4>@digerSayisi</h4>
                            <p class="mb-0">Diğer</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Araç Listesi -->
        <div class="main-card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-list me-2"></i>Araç Listesi</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Marka/Model</th>
                                <th>Plaka</th>
                                <th>Araç Tipi</th>
                                <th>Yakıt</th>
                                <th>Vites</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var arac in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@arac.Marka @arac.Model</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@arac.Plaka</span>
                                    </td>
                                    <td>@arac.AracTipi</td>
                                    <td>
                                        @if (arac.YakitTuru == "Benzin")
                                        {
                                            <span class="badge bg-info">@arac.YakitTuru</span>
                                        }
                                        else if (arac.YakitTuru == "Dizel")
                                        {
                                            <span class="badge bg-warning">@arac.YakitTuru</span>
                                        }
                                        else if (arac.YakitTuru == "Elektrik")
                                        {
                                            <span class="badge bg-success">@arac.YakitTuru</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@arac.YakitTuru</span>
                                        }
                                    </td>
                                    <td>@arac.VitesTipi</td>
                                    <td>
                                        <span class="badge 
                                            @(arac.Durumu == "Müsait" ? "bg-success" : 
                                              arac.Durumu == "Bakımda" ? "bg-warning" : "bg-danger")">
                                            @arac.Durumu
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Duzenle", "Arac", new { id = arac.ID })" 
                                               class="btn btn-sm btn-outline-primary" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    onclick="aracSil(@arac.ID)" title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="empty-state-card">
            <div class="card-body">
                <i class="fas fa-car fa-4x mb-4"></i>
                <h4 class="mb-3">Henüz sisteme araç eklenmemiştir</h4>
                <p class="mb-4">İlk aracınızı eklemek için aşağıdaki butona tıklayın.</p>
                <a href="@Url.Action("Ekle", "Arac")" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>İlk Aracımı Ekle
                </a>
            </div>
        </div>
    }
    </div>
</div>

@section Scripts {
    <script>


        function aracSil(aracId) {
            if (confirm('Bu aracı silmek istediğinizden emin misiniz?\n\nDikkat: Bu işlem geri alınamaz!')) {
                $.ajax({
                    url: '@Url.Action("Sil", "Arac")',
                    type: 'POST',
                    data: { id: aracId },
                    success: function(result) {
                        if (result.success) {
                            alert(result.message);
                            location.reload();
                        } else {
                            alert('Hata: ' + result.message);
                        }
                    },
                    error: function() {
