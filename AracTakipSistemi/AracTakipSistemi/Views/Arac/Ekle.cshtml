@model AracTakipSistemi.Models.Arac
@{
    ViewData["Title"] = "Araç Ekle";
}

<style>
    /* Araç Ekle Sapphire Nightfall Tema */
    .arac-ekle-container {
        background: transparent !important;
        padding: 2rem 0;
        min-height: 100vh;
        margin-top: 80px !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
    }
    
    .arac-ekle-container * {
        color: var(--sapphire-white) !important;
    }
    
    /* Ana Container */
    .arac-ekle-form-container {
        width: 100% !important;
        max-width: 1200px !important;
        margin: 0 auto !important;
        padding: 0 20px !important;
        position: relative !important;
        left: 25% !important;
        transform: translateX(-25%) !important;
        margin-bottom: 100px !important; /* Footer'dan kurtarmak için */
    }
    
    /* Hero Section */
    .page-header {
        text-align: center;
        margin-bottom: 3rem;
        padding: 2rem 0;
    }
    
    .page-header h4 {
        color: var(--sapphire-gold) !important;
        font-size: 2.5rem !important;
        font-weight: 700 !important;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5) !important;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, var(--sapphire-gold) 0%, var(--sapphire-turkuaz) 100%) !important;
        -webkit-background-clip: text !important;
        -webkit-text-fill-color: transparent !important;
        background-clip: text !important;
    }
    
    .page-header i {
        color: var(--sapphire-gold) !important;
        text-shadow: 0 0 20px rgba(255, 215, 0, 0.5) !important;
        margin-right: 1rem;
        animation: pulse 2s infinite;
    }
    
    /* Ana Form Kartı */
    .main-form-card {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.8) 0%, rgba(22, 33, 62, 0.8) 100%) !important;
        border: 2px solid var(--sapphire-accent) !important;
        border-radius: 20px !important;
        backdrop-filter: blur(15px) !important;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3) !important;
        overflow: hidden;
        margin-bottom: 2rem;
    }
    
    .main-form-card .card-header {
        background: linear-gradient(135deg, rgba(233, 69, 96, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
        border-bottom: 2px solid rgba(233, 69, 96, 0.3) !important;
        color: var(--sapphire-gold) !important;
        font-weight: 700 !important;
        border-radius: 18px 18px 0 0 !important;
        padding: 1.5rem 2rem !important;
        text-align: center;
    }
    
    .main-form-card .card-header h4 {
        color: var(--sapphire-gold) !important;
        margin-bottom: 0 !important;
        font-weight: 700 !important;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5) !important;
    }
    
    .main-form-card .card-body {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.9) 0%, rgba(22, 33, 62, 0.9) 100%) !important;
        color: var(--sapphire-white) !important;
        padding: 2rem !important;
    }
    
    /* Form Elemanları */
    .form-control, .form-select {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.8) 0%, rgba(22, 33, 62, 0.8) 100%) !important;
        border: 2px solid rgba(233, 69, 96, 0.3) !important;
        color: var(--sapphire-white) !important;
        border-radius: 10px !important;
        backdrop-filter: blur(10px) !important;
        padding: 12px 16px !important;
        font-size: 1rem !important;
    }
    
    /* Dropdown Option Stilleri */
    .form-select option {
        background-color: #1a1a2e !important;
        color: var(--sapphire-white) !important;
        font-weight: 500 !important;
        padding: 8px 12px !important;
    }
    
    .form-select option:hover {
        background-color: var(--sapphire-accent) !important;
        color: var(--sapphire-white) !important;
    }
    
    .form-select option:checked {
        background-color: var(--sapphire-accent) !important;
        color: var(--sapphire-white) !important;
    }
    }
    
    .form-control:focus, .form-select:focus {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.9) 0%, rgba(22, 33, 62, 0.9) 100%) !important;
        border-color: var(--sapphire-accent) !important;
        box-shadow: 0 0 0 0.2rem rgba(233, 69, 96, 0.25) !important;
        color: var(--sapphire-white) !important;
    }
    
    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.6) !important;
    }
    
    .form-label {
        color: var(--sapphire-gold) !important;
        font-weight: 600 !important;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5) !important;
        margin-bottom: 0.5rem !important;
        font-size: 1rem !important;
    }
    
    .form-label i {
        color: var(--sapphire-turkuaz) !important;
        margin-right: 0.5rem !important;
    }
    
    /* Alert Stilleri */
    .alert {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
        border: 2px solid rgba(233, 69, 96, 0.3) !important;
        backdrop-filter: blur(10px) !important;
        color: var(--sapphire-white) !important;
        border-radius: 15px !important;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2) !important;
    }
    
    .alert-success {
        background: linear-gradient(135deg, rgba(40, 167, 69, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
        border-color: rgba(40, 167, 69, 0.5) !important;
    }
    
    .alert-danger {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
        border-color: rgba(220, 53, 69, 0.5) !important;
    }
    
    /* Önizleme Kartı */
    .preview-card {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.6) 0%, rgba(22, 33, 62, 0.6) 100%) !important;
        border: 2px solid rgba(233, 69, 96, 0.3) !important;
        border-radius: 15px !important;
        backdrop-filter: blur(10px) !important;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2) !important;
        margin-bottom: 2rem;
    }
    
    .preview-card .card-header {
        background: linear-gradient(135deg, rgba(233, 69, 96, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
        border-bottom: 2px solid rgba(233, 69, 96, 0.3) !important;
        color: var(--sapphire-gold) !important;
        font-weight: 700 !important;
        border-radius: 13px 13px 0 0 !important;
        padding: 1rem 1.5rem !important;
    }
    
    .preview-card .card-header h6 {
        color: var(--sapphire-gold) !important;
        margin-bottom: 0 !important;
        font-weight: 700 !important;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5) !important;
    }
    
    .preview-card .card-body {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.8) 0%, rgba(22, 33, 62, 0.8) 100%) !important;
        color: var(--sapphire-white) !important;
        padding: 1.5rem !important;
    }
    
    .preview-card i {
        color: var(--sapphire-turkuaz) !important;
        text-shadow: 0 0 20px rgba(0, 206, 209, 0.5) !important;
        font-size: 3rem !important;
    }
    
    /* Önizleme Metin Stilleri */
    #onizlemeBilgi {
        color: var(--sapphire-gold) !important;
        font-weight: 700 !important;
        font-size: 1.3rem !important;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5) !important;
        margin-bottom: 1rem !important;
    }
    
    #onizlemeBilgi.text-muted {
        color: var(--sapphire-gold) !important;
        opacity: 0.8 !important;
        font-style: italic !important;
    }
    
    #onizlemeBilgi.text-dark {
        color: var(--sapphire-white) !important;
        font-weight: 700 !important;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5) !important;
    }
    
    /* Badge Stilleri */
    .badge {
        font-size: 0.8rem !important;
        padding: 0.5rem 0.8rem !important;
        border-radius: 8px !important;
        font-weight: 600 !important;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5) !important;
    }
    
    .badge.bg-secondary {
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%) !important;
        color: var(--sapphire-white) !important;
    }
    
    .badge.bg-info {
        background: linear-gradient(135deg, var(--sapphire-turkuaz) 0%, #17a2b8 100%) !important;
        color: var(--sapphire-white) !important;
    }
    
    .badge.bg-warning {
        background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%) !important;
        color: #212529 !important;
    }
    
    .badge.bg-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
        color: var(--sapphire-white) !important;
    }
    
    .badge.bg-primary {
        background: linear-gradient(135deg, var(--sapphire-accent) 0%, #d63384 100%) !important;
        color: var(--sapphire-white) !important;
    }
    
    .badge.bg-danger {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%) !important;
        color: var(--sapphire-white) !important;
    }
    
    /* Buton Stilleri */
    .btn {
        border-radius: 10px !important;
        font-weight: 600 !important;
        transition: all 0.3s ease;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.3) !important;
        padding: 12px 20px !important;
        font-size: 1rem !important;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.3);
    }
    
    .btn-primary {
        background: linear-gradient(135deg, var(--sapphire-accent) 0%, #d63384 100%) !important;
        border: 2px solid var(--sapphire-accent) !important;
        color: var(--sapphire-white) !important;
    }
    
    .btn-primary:hover {
        background: linear-gradient(135deg, #d63384 0%, var(--sapphire-accent) 100%) !important;
        border-color: #d63384 !important;
        color: var(--sapphire-white) !important;
    }
    
    .btn-outline-secondary {
        background: linear-gradient(135deg, rgba(108, 117, 125, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
        border: 2px solid #6c757d !important;
        color: #6c757d !important;
    }
    
    .btn-outline-secondary:hover {
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%) !important;
        border-color: #6c757d !important;
        color: var(--sapphire-white) !important;
    }
    
    .btn-outline-warning {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
        border: 2px solid #ffc107 !important;
        color: #ffc107 !important;
    }
    
    .btn-outline-warning:hover {
        background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%) !important;
        border-color: #ffc107 !important;
        color: #212529 !important;
    }
    
    /* Sticky Butonlar */
    .sticky-buttons {
        position: sticky;
        bottom: 0;
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.9) 0%, rgba(22, 33, 62, 0.9) 100%) !important;
        border-top: 2px solid var(--sapphire-accent) !important;
        padding: 20px 0;
        margin-top: 30px;
        z-index: 1000;
        box-shadow: 0 -5px 15px rgba(0, 0, 0, 0.3) !important;
        backdrop-filter: blur(15px) !important;
        border-radius: 15px 15px 0 0 !important;
    }
    
    /* Validation Stilleri */
    .text-danger {
        color: #FF6B6B !important;
        font-weight: 600 !important;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5) !important;
    }
    
    .text-muted {
        color: rgba(255, 255, 255, 0.6) !important;
        font-weight: 500 !important;
    }
    
    /* Animasyonlar */
    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }
    
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    /* Animasyon Uygulamaları */
    .page-header {
        animation: fadeInUp 1s ease-out;
    }
    
    .main-form-card {
        animation: fadeInUp 1s ease-out 0.3s both;
    }
    
    .preview-card {
        animation: fadeInUp 1s ease-out 0.6s both;
    }
    
    /* Responsive Tasarım */
    @@media (max-width: 768px) {
        .arac-ekle-container {
            margin-top: 60px !important;
            padding: 1rem 0;
        }
        
        .arac-ekle-form-container {
            padding: 0 15px !important;
            margin-left: 15% !important;
            transform: translateX(5%) !important;
        }
        
        .page-header h4 {
            font-size: 2rem !important;
        }
        
        .main-form-card .card-body {
            padding: 1.5rem !important;
        }
        
        .sticky-buttons {
            padding: 15px 0 !important;
        }
        
        .btn {
            width: 100% !important;
            margin-bottom: 10px !important;
        }
    }
</style>

<div class="arac-ekle-container">
    <div class="arac-ekle-form-container">
        <div class="page-header">
            <h4><i class="fas fa-plus me-2"></i>Yeni Araç Ekle</h4>
        </div>
        
        <div class="main-form-card">
            <div class="card-header">
                <h4><i class="fas fa-plus me-2"></i>Yeni Araç Ekle</h4>
            </div>
            <div class="card-body">
                @if (TempData["Hata"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Hata"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["Basari"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@TempData["Basari"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                <form method="post" asp-action="Ekle" asp-controller="Arac">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="Marka" class="form-label">
                                <i class="fas fa-car me-1"></i>Marka *
                            </label>
                            <input type="text" class="form-control" asp-for="Marka" required placeholder="Örn: Toyota">
                            <span asp-validation-for="Marka" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="Model" class="form-label">
                                <i class="fas fa-cog me-1"></i>Model *
                            </label>
                            <input type="text" class="form-control" asp-for="Model" required placeholder="Örn: Corolla">
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="Plaka" class="form-label">
                                <i class="fas fa-id-card me-1"></i>Plaka *
                            </label>
                            <input type="text" class="form-control" asp-for="Plaka" required 
                                   placeholder="34 ABC 123" pattern="[0-9]{2}\s[A-Z]{1,3}\s[0-9]{1,4}" 
                                   title="Plaka formatı: 34 ABC 123">
                            <span asp-validation-for="Plaka" class="text-danger"></span>
                            <small class="text-muted">Format: 34 ABC 123</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="AracTipi" class="form-label">
                                <i class="fas fa-list-alt me-1"></i>Araç Tipi *
                            </label>
                            <select class="form-select" asp-for="AracTipi" required>
                                <option value="">Araç tipi seçin...</option>
                                <option value="Sedan">Sedan</option>
                                <option value="Hatchback">Hatchback</option>
                                <option value="SUV">SUV</option>
                                <option value="Station Wagon">Station Wagon</option>
                                <option value="Coupe">Coupe</option>
                                <option value="Cabriolet">Cabriolet</option>
                                <option value="Pickup">Pickup</option>
                                <option value="Minivan">Minivan</option>
                                <option value="Ticari Araç">Ticari Araç</option>
                            </select>
                            <span asp-validation-for="AracTipi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="YakitTuru" class="form-label">
                                <i class="fas fa-gas-pump me-1"></i>Yakıt Türü *
                            </label>
                            <select class="form-select" asp-for="YakitTuru" required>
                                <option value="">Yakıt türü seçin...</option>
                                <option value="Benzin">Benzin</option>
                                <option value="Dizel">Dizel</option>
                                <option value="LPG">LPG</option>
                                <option value="Benzin + LPG">Benzin + LPG</option>
                                <option value="Elektrik">Elektrik</option>
                                <option value="Hibrit">Hibrit</option>
                                <option value="Plug-in Hibrit">Plug-in Hibrit</option>
                            </select>
                            <span asp-validation-for="YakitTuru" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="VitesTipi" class="form-label">
                                <i class="fas fa-cogs me-1"></i>Vites Tipi *
                            </label>
                            <select class="form-select" asp-for="VitesTipi" required>
                                <option value="">Vites tipi seçin...</option>
                                <option value="Manuel">Manuel</option>
                                <option value="Otomatik">Otomatik</option>
                                <option value="Yarı Otomatik">Yarı Otomatik</option>
                                <option value="CVT">CVT</option>
                                <option value="DSG">DSG</option>
                            </select>
                            <span asp-validation-for="VitesTipi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="Durumu" class="form-label">
                                <i class="fas fa-check-circle me-1"></i>Durum
                            </label>
                            <select class="form-select" asp-for="Durumu">
                                <option value="Müsait">Müsait</option>
                                <option value="Bakımda">Bakımda</option>
                                <option value="Arızalı">Arızalı</option>
                                <option value="Serviste">Serviste</option>
                            </select>
                            <span asp-validation-for="Durumu" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Önizleme Kartı -->
                    <div class="preview-card">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="fas fa-eye me-2"></i>Araç Önizlemesi</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h5 id="onizlemeBilgi" class="text-muted">Bilgileri doldurun...</h5>
                                    <div id="onizlemeDetay"></div>
                                </div>
                                <div class="col-md-4 text-center">
                                    <i class="fas fa-car"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Butonlar için sabit alan -->
                    <div class="sticky-buttons">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", "Arac")" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="reset" class="btn btn-outline-warning me-md-2">
                                <i class="fas fa-undo me-2"></i>Temizle
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Aracı Kaydet
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Plaka formatını otomatik düzenle
        $('#Plaka').on('input', function() {
            var plaka = $(this).val().toUpperCase().replace(/[^0-9A-Z]/g, '');
            
            if (plaka.length >= 2) {
                var formatted = plaka.substring(0, 2);
                if (plaka.length > 2) {
                    formatted += ' ' + plaka.substring(2, 5);
                }
                if (plaka.length > 5) {
                    formatted += ' ' + plaka.substring(5, 9);
                }
                $(this).val(formatted);
            }
            onizlemeGuncelle();
        });

        // Form değişikliklerini dinle ve önizlemeyi güncelle
        $('input, select').on('input change', function() {
            onizlemeGuncelle();
        });

        function onizlemeGuncelle() {
            var marka = $('#Marka').val();
            var model = $('#Model').val();
            var plaka = $('#Plaka').val();
            var aracTipi = $('#AracTipi').val();
            var yakitTuru = $('#YakitTuru').val();
            var vitesTipi = $('#VitesTipi').val();
            var durum = $('#Durumu').val();

            if (marka && model) {
                $('#onizlemeBilgi').text(marka + ' ' + model).removeClass('text-muted').addClass('text-dark');
                
                var detayHtml = '';
                if (plaka) detayHtml += '<span class="badge bg-secondary me-2">' + plaka + '</span>';
                if (aracTipi) detayHtml += '<span class="badge bg-info me-2">' + aracTipi + '</span>';
                if (yakitTuru) detayHtml += '<span class="badge bg-warning me-2">' + yakitTuru + '</span>';
                if (vitesTipi) detayHtml += '<span class="badge bg-primary me-2">' + vitesTipi + '</span>';
                if (durum) {
                    var durumClass = durum === 'Müsait' ? 'bg-success' : 
                                   durum === 'Bakımda' ? 'bg-warning' : 'bg-danger';
                    detayHtml += '<span class="badge ' + durumClass + ' me-2">' + durum + '</span>';
                }
                
                $('#onizlemeDetay').html(detayHtml);
            } else {
                $('#onizlemeBilgi').text('Bilgileri doldurun...').removeClass('text-dark').addClass('text-muted');
                $('#onizlemeDetay').html('');
            }
        }

        // Form reset olduğunda önizlemeyi temizle
        $('button[type="reset"]').on('click', function() {
            setTimeout(function() {
                onizlemeGuncelle();
            }, 10);
        });

        // Sayfa yüklendiğinde önizlemeyi güncelle
        $(document).ready(function() {
            onizlemeGuncelle();
        });
    </script>
} 