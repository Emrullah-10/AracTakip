<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Araç Takip</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AracTakipSistemi.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        /* Sapphire Nightfall Tema Değişkenleri */
        :root {
            --sapphire-primary: #1a1a2e;
            --sapphire-secondary: #16213e;
            --sapphire-accent: #e94560;
            --sapphire-gold: #FFD700;
            --sapphire-turkuaz: #00CED1;
            --sapphire-white: #f8f9fa;
            --sapphire-dark: #0f0f23;
            --sapphire-light: #2a2a4e;
        }
        
        /* Admin Panel Sapphire Nightfall Tema */
        body {
            background: linear-gradient(135deg, var(--sapphire-primary) 0%, var(--sapphire-secondary) 100%) !important;
            color: var(--sapphire-white) !important;
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }
        
        /* Header Stilleri */
        header {
            background: linear-gradient(135deg, var(--sapphire-dark) 0%, var(--sapphire-light) 100%) !important;
            border-bottom: 2px solid var(--sapphire-accent) !important;
            box-shadow: 0 4px 20px rgba(233, 69, 96, 0.3) !important;
        }
        
        /* Hamburger Navigation Stilleri */
        .hamburger-nav {
            background: linear-gradient(135deg, var(--sapphire-dark) 0%, var(--sapphire-light) 100%) !important;
        }
        
        .nav-brand {
            color: var(--sapphire-gold) !important;
            text-decoration: none !important;
            font-weight: 700 !important;
            font-size: 1.5rem !important;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5) !important;
        }
        
        .nav-brand:hover {
            color: var(--sapphire-gold) !important;
            text-decoration: none !important;
        }
        
        /* Side Menu Stilleri */
        .side-menu {
            background: linear-gradient(135deg, var(--sapphire-primary) 0%, var(--sapphire-secondary) 100%) !important;
            border-right: 2px solid var(--sapphire-accent) !important;
        }
        
        .side-menu-header h3 {
            color: var(--sapphire-gold) !important;
            font-weight: 700 !important;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5) !important;
        }
        
        .menu-link {
            color: var(--sapphire-white) !important;
            text-decoration: none !important;
            transition: all 0.3s ease !important;
            border-radius: 10px !important;
            margin: 2px 0 !important;
            padding: 12px 15px !important;
            display: flex !important;
            align-items: center !important;
            gap: 10px !important;
        }
        
        .menu-link:hover {
            background: linear-gradient(135deg, rgba(233, 69, 96, 0.3) 0%, rgba(255, 255, 255, 0.1) 100%) !important;
            color: var(--sapphire-gold) !important;
            transform: translateX(5px) !important;
            box-shadow: 0 4px 15px rgba(233, 69, 96, 0.2) !important;
        }
        
        .menu-link i {
            color: var(--sapphire-turkuaz) !important;
            font-size: 1.1rem !important;
        }
        
        .menu-link:hover i {
            color: var(--sapphire-gold) !important;
        }
        
        /* Submenu Stilleri */
        .submenu {
            background: linear-gradient(135deg, var(--sapphire-light) 0%, var(--sapphire-primary) 100%) !important;
            border-left: 2px solid var(--sapphire-accent) !important;
        }
        
        .submenu a {
            color: var(--sapphire-white) !important;
            text-decoration: none !important;
            padding: 8px 15px !important;
            border-radius: 8px !important;
            margin: 2px 5px !important;
            transition: all 0.3s ease !important;
        }
        
        .submenu a:hover {
            background: linear-gradient(135deg, rgba(233, 69, 96, 0.3) 0%, rgba(255, 255, 255, 0.1) 100%) !important;
            color: var(--sapphire-gold) !important;
            transform: translateX(3px) !important;
        }
        
        /* User Section Stilleri */
        .user-section {
            border-top: 2px solid var(--sapphire-accent) !important;
            padding-top: 20px !important;
        }
        
        .user-info h4 {
            color: var(--sapphire-gold) !important;
            font-weight: 700 !important;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5) !important;
        }
        
        .user-info p {
            color: var(--sapphire-turkuaz) !important;
            font-weight: 600 !important;
        }
        
        .logout {
            color: #FF6B6B !important;
        }
        
        .logout:hover {
            background: linear-gradient(135deg, rgba(255, 107, 107, 0.3) 0%, rgba(255, 255, 255, 0.1) 100%) !important;
            color: #FF6B6B !important;
        }
        
        /* Alert Stilleri */
        .alert {
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
            border: 1px solid rgba(233, 69, 96, 0.3) !important;
            backdrop-filter: blur(10px) !important;
            color: var(--sapphire-white) !important;
        }
        
        .alert-success {
            background: linear-gradient(135deg, rgba(34, 197, 94, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
            border-color: rgba(34, 197, 94, 0.5) !important;
        }
        
        .alert-danger {
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
            border-color: rgba(239, 68, 68, 0.5) !important;
        }
        
        /* Footer Stilleri */
        footer {
            background: linear-gradient(135deg, var(--sapphire-dark) 0%, var(--sapphire-light) 100%) !important;
            border-top: 2px solid var(--sapphire-accent) !important;
            color: var(--sapphire-white) !important;
            position: fixed !important;
            bottom: 0 !important;
            left: 0 !important;
            right: 0 !important;
            z-index: 1000 !important;
            margin-left: 0 !important;
            width: 100% !important;
        }
        
        /* Container Stilleri */
        .container-fluid {
            background: transparent !important;
            margin-bottom: 80px !important; /* Footer için alt boşluk */
        }
        
        main {
            background: transparent !important;
            min-height: calc(100vh - 200px) !important;
            margin-bottom: 80px !important; /* Footer için alt boşluk */
        }
        
        /* Badge Stilleri */
        .badge {
            background: linear-gradient(135deg, var(--sapphire-accent) 0%, var(--sapphire-turkuaz) 100%) !important;
            color: var(--sapphire-white) !important;
            font-weight: 600 !important;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.5) !important;
        }
        
        .badge-warning {
            background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%) !important;
        }
        
        .badge-info {
            background: linear-gradient(135deg, var(--sapphire-turkuaz) 0%, #3b82f6 100%) !important;
        }
        
        /* Section Title Stilleri */
        .section-title {
            color: var(--sapphire-gold) !important;
            font-weight: 700 !important;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5) !important;
        }
        
        /* Responsive Tasarım */
        @@media (max-width: 768px) {
            .menu-link {
                padding: 15px 20px !important;
                font-size: 1.1rem !important;
            }
            
            .submenu a {
                padding: 12px 20px !important;
                font-size: 1rem !important;
            }
            
            /* Footer Responsive */
            footer {
                position: fixed !important;
                bottom: 0 !important;
                left: 0 !important;
                right: 0 !important;
                width: 100% !important;
                margin-left: 0 !important;
            }
            
            .container-fluid {
                margin-bottom: 60px !important; /* Mobilde daha az boşluk */
            }
            
            main {
                margin-bottom: 60px !important; /* Mobilde daha az boşluk */
            }
        }
    </style>
</head>
<body>
    <header>
        <!-- Hamburger Navigation -->
        <nav class="hamburger-nav">
            <div class="nav-container">
                <div class="nav-header">
                    <a class="nav-brand" asp-controller="Anasayfa" asp-action="Index">
                        <i class="fas fa-car"></i>
                        <span>Araç Takip</span>
                    </a>
                </div>
                
                <!-- Menu Overlay -->
                <div class="menu-overlay" id="menuOverlay"></div>
                
                <!-- Side Menu -->
                <div class="side-menu" id="sideMenu">
                    <div class="side-menu-header">
                        <h3><i class="fas fa-car me-2"></i>Araç Takip</h3>
                        <button class="close-menu" id="closeMenu">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    
                    <div class="side-menu-content">
                        <!-- Ana Menü -->
                        <div class="menu-section">
                            <ul class="menu-list">
                                <li class="menu-item">
                                    <a class="menu-link" asp-controller="Anasayfa" asp-action="Index">
                                        <i class="fas fa-home"></i>
                                        <span>Ana Sayfa</span>
                                    </a>
                                </li>
                                
                                @if (Context.Session.GetString("KullaniciRol") == "Admin")
                                {
                                    <!-- Admin Dashboard -->
                                    <li class="menu-item">
                                        <a class="menu-link" asp-controller="Admin" asp-action="Index">
                                            <i class="fas fa-tachometer-alt"></i>
                                            <span>Dashboard</span>
                                        </a>
                                    </li>
                                    
                                    <!-- Araç Yönetimi -->
                                    <li class="menu-item">
                                        <a class="menu-link" asp-controller="Arac" asp-action="Index">
                                            <i class="fas fa-car"></i>
                                            <span>Araç Yönetimi</span>
                                        </a>
                                    </li>
                                    
                                    <!-- Randevu Yönetimi -->
                                    <li class="menu-item">
                                        <a class="menu-link" asp-controller="Admin" asp-action="RandevuYonetimi">
                                            <i class="fas fa-calendar-check"></i>
                                            <span>Randevu Yönetimi</span>
                                        </a>
                                    </li>
                                    
                                    <!-- Kullanıcı Yönetimi -->
                                    <li class="menu-item">
                                        <a class="menu-link" asp-controller="Admin" asp-action="KullaniciYonetimi">
                                            <i class="fas fa-users"></i>
                                            <span>Kullanıcı Yönetimi</span>
                                        </a>
                                    </li>
                                    
                                    <!-- İstatistikler -->
                                    <li class="menu-item">
                                        <a class="menu-link" asp-controller="Istatistik" asp-action="Index">
                                            <i class="fas fa-chart-line"></i>
                                            <span>İstatistikler</span>
                                        </a>
                                    </li>
                                    

                                }
                                else if (Context.Session.GetInt32("KullaniciID") != null)
                                {
                                    <!-- Normal Kullanıcı Menüleri -->
                                    <li class="menu-item">
                                        <a class="menu-link" asp-controller="Randevu" asp-action="Index">
                                            <i class="fas fa-calendar"></i>
                                            <span>Araç Taleplerim</span>
                                        </a>
                                    </li>
                                    <li class="menu-item">
                                        <a class="menu-link" asp-controller="Randevu" asp-action="Olustur">
                                            <i class="fas fa-plus"></i>
                                            <span>ARAÇ TALEP ET</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                        

                        
                        <!-- Kullanıcı Bölümü -->
                        <div class="menu-section user-section">
                            @if (Context.Session.GetInt32("KullaniciID") != null)
                            {
                                <div class="user-info">
                                    <div class="user-avatar">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div class="user-details">
                                        <h4>@Context.Session.GetString("KullaniciAd")</h4>
                                        <p>@Context.Session.GetString("KullaniciRol")</p>
                                    </div>
                                </div>
                                
                                <ul class="menu-list">
                                    <li class="menu-item">
                                        <a class="menu-link" asp-controller="Bildirim" asp-action="Index">
                                            <i class="fas fa-bell"></i>
                                            <span>Bildirimler</span>
                                            <span class="badge badge-warning" id="bildirimBadge" style="display: none;">0</span>
                                        </a>
                                    </li>
                                    <li class="menu-item">
                                        <a class="menu-link" asp-controller="Kullanici" asp-action="Profil">
                                            <i class="fas fa-user-edit"></i>
                                            <span>Profil</span>
                                        </a>
                                    </li>
                                    <li class="menu-item">
                                        <a class="menu-link logout" asp-controller="Kullanici" asp-action="Logout">
                                            <i class="fas fa-sign-out-alt"></i>
                                            <span>Çıkış Yap</span>
                                        </a>
                                    </li>
                                </ul>
                            }
                            else
                            {
                                <ul class="menu-list">
                                    <li class="menu-item">
                                        <a class="menu-link" asp-controller="Kullanici" asp-action="Login">
                                            <i class="fas fa-sign-in-alt"></i>
                                            <span>Giriş Yap</span>
                                        </a>
                                    </li>
                                    <li class="menu-item">
                                        <a class="menu-link" asp-controller="Kullanici" asp-action="Register">
                                            <i class="fas fa-user-plus"></i>
                                            <span>Kayıt Ol</span>
                                        </a>
                                    </li>
                                </ul>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <!-- Alert Messages -->
        @if (TempData["Basari"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Basari"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Hata"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Hata"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (ViewBag.Basari != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@ViewBag.Basari
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Hata
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white mt-5" style="background: linear-gradient(135deg, #1e3a8a 0%, #475569 100%);">
        <div class="container py-3">
            <div class="row">
                <div class="col-12 text-center" style="margin-left: 80px;">
                    <div class="fw-semibold" style="font-size: 1.5rem; margin-bottom: 8px;">&copy; 2025 - Turgut Özal Araç Takip Sistemi</div>
                    <small class="fw-medium" style="opacity: 0.9; font-size: 1.2rem;">Modern ve Güvenli Araç Takip Sistemi</small>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
