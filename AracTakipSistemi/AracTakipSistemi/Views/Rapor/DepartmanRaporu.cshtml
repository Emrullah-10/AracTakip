@using System.Linq
@model List<AracTakipSistemi.Models.DepartmanRaporu>
@{
    ViewData["Title"] = "Departman Raporu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var filtre = ViewBag.Filtre as AracTakipSistemi.Models.RaporFiltre;
    var departmanlar = ViewBag.Departmanlar as List<string>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <h1 class="page-title">
                    <i class="fas fa-building"></i> Departman Raporu
                </h1>
                <p class="page-description">Departmanların araç kullanım istatistikleri</p>
            </div>
        </div>
    </div>

    <!-- Filtreleme Paneli -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-filter"></i> Filtreleme Seçenekleri
                    </h5>
                </div>
                <div class="card-body">
                    <form method="get" id="filtreForm">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Başlangıç Tarihi</label>
                                    <input type="date" class="form-control" name="BaslangicTarihi" 
                                           value="@(filtre?.BaslangicTarihi?.ToString("yyyy-MM-dd"))" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Bitiş Tarihi</label>
                                    <input type="date" class="form-control" name="BitisTarihi" 
                                           value="@(filtre?.BitisTarihi?.ToString("yyyy-MM-dd"))" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Onay Durumu</label>
                                    <select class="form-control" name="OnayDurumu">
                                        <option value="">Tümü</option>
                                        <option value="Bekliyor">Bekliyor</option>
                                        <option value="Onaylandı">Onaylandı</option>
                                        <option value="Reddedildi">Reddedildi</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <div class="d-flex">
                                        <button type="submit" class="btn btn-primary mr-2">
                                            <i class="fas fa-search"></i> Filtrele
                                        </button>
                                        <a href="@Url.Action("DepartmanRaporu", "Rapor")" class="btn btn-secondary">
                                            <i class="fas fa-times"></i> Temizle
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Rapor Tablosu -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar"></i> Departman Detayları
                    </h5>
                    <div>
                        <span class="badge badge-info">Toplam: @Model.Count departman</span>
                        <button class="btn btn-success btn-sm ml-2" onclick="exportToExcel()">
                            <i class="fas fa-file-excel"></i> Excel İndir
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="raporTablosu">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Departman</th>
                                        <th>Kullanıcı Sayısı</th>
                                        <th>Toplam Randevu</th>
                                        <th>Onaylandı</th>
                                        <th>Bekliyor</th>
                                        <th>Reddedildi</th>
                                        <th>Toplam Mesafe (km)</th>
                                        <th>Toplam Kişi</th>
                                        <th>Aktivite Grafiği</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var maxRandevu = 1;
                                        if (Model.Any())
                                        {
                                            maxRandevu = Model.Select(x => x.ToplamRandevuSayisi).Max();
                                        }
                                    }
                                    @foreach (var departman in Model)
                                    {
                                        var oran = maxRandevu > 0 ? (departman.ToplamRandevuSayisi * 100 / maxRandevu) : 0;
                                        var aktiviteClass = oran > 75 ? "bg-success" : oran > 50 ? "bg-warning" : oran > 25 ? "bg-info" : "bg-danger";

                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="dept-icon mr-2">
                                                        <i class="fas fa-building text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@departman.Departman</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge badge-secondary">@departman.KullaniciSayisi</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-primary">@departman.ToplamRandevuSayisi</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-success">@departman.OnaylananRandevuSayisi</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-warning">@departman.BekleyenRandevuSayisi</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-danger">@departman.ReddedilenRandevuSayisi</span>
                                            </td>
                                            <td>
                                                <strong>@departman.ToplamMesafe.ToString("N0")</strong> km
                                            </td>
                                            <td>
                                                <strong>@departman.ToplamKisiSayisi</strong> kişi
                                            </td>
                                            <td>
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar @aktiviteClass" role="progressbar" style="width: @oran%">
                                                        @oran.ToString("F0")%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Departman Karşılaştırma Grafiği -->
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h6><i class="fas fa-chart-pie"></i> Randevu Dağılımı</h6>
                                    </div>
                                    <div class="card-body">
                                        <canvas id="randevuDagilimiChart" width="400" height="200"></canvas>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h6><i class="fas fa-chart-bar"></i> Mesafe Karşılaştırması</h6>
                                    </div>
                                    <div class="card-body">
                                        <canvas id="mesafeKarsilastirmaChart" width="400" height="200"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-building fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Departman verisi bulunamadı</h5>
                            <p class="text-muted">Seçilen filtrelere göre hiçbir departman bulunamadı.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Geri Dönüş Butonu -->
    <div class="row mt-3">
        <div class="col-12">
            <a href="@Url.Action("Index", "Rapor")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Raporlara Dön
            </a>
        </div>
    </div>
</div>

<!-- Chart.js için veri -->
@if (Model.Any())
{
    <script id="chart-data" type="application/json">
    {
        "departmanlar": [@Html.Raw(string.Join(",", Model.Select(x => "\"" + x.Departman + "\"")))],
        "randevuSayilari": [@Html.Raw(string.Join(",", Model.Select(x => x.ToplamRandevuSayisi)))],
        "mesafeler": [@Html.Raw(string.Join(",", Model.Select(x => x.ToplamMesafe)))]
    }
    </script>
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    function exportToExcel() {
        var filtre = {
            BaslangicTarihi: $('input[name="BaslangicTarihi"]').val(),
            BitisTarihi: $('input[name="BitisTarihi"]').val(),
            OnayDurumu: $('select[name="OnayDurumu"]').val()
        };

        // Form oluştur ve submit et
        var form = $('<form></form>');
        form.attr('method', 'post');
        form.attr('action', '@Url.Action("ExcelRapor", "Rapor")');
        
        // Rapor türü ekle
        form.append($('<input>').attr('type', 'hidden').attr('name', 'raporTuru').attr('value', 'DepartmanRaporu'));
        
        // Filtre değerlerini ekle
        if (filtre.BaslangicTarihi) {
            form.append($('<input>').attr('type', 'hidden').attr('name', 'filtre.BaslangicTarihi').attr('value', filtre.BaslangicTarihi));
        }
        if (filtre.BitisTarihi) {
            form.append($('<input>').attr('type', 'hidden').attr('name', 'filtre.BitisTarihi').attr('value', filtre.BitisTarihi));
        }
        if (filtre.OnayDurumu) {
            form.append($('<input>').attr('type', 'hidden').attr('name', 'filtre.OnayDurumu').attr('value', filtre.OnayDurumu));
        }
        
        // Body'e ekle ve submit et
        $('body').append(form);
        form.submit();
        form.remove();
    }

    // DataTable ile tablo geliştirmesi
    $(document).ready(function() {
        if ($('#raporTablosu').length > 0) {
            $('#raporTablosu').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.3/i18n/Turkish.json"
                },
                "pageLength": 25,
                "order": [[2, "desc"]] // Toplam randevu sayısına göre sırala
            });
        }

        // Grafikleri oluştur
        createCharts();
    });

    function createCharts() {
        // Chart verilerini al
        var chartDataElement = document.getElementById('chart-data');
        if (chartDataElement) {
            var chartData = JSON.parse(chartDataElement.textContent);
            
            // Randevu Dağılımı Pasta Grafiği
            var ctx1 = document.getElementById('randevuDagilimiChart').getContext('2d');
            new Chart(ctx1, {
                type: 'pie',
                data: {
                    labels: chartData.departmanlar,
                    datasets: [{
                        data: chartData.randevuSayilari,
                        backgroundColor: [
                            '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF',
                            '#FF9F40', '#FF6384', '#C9CBCF', '#4BC0C0', '#FF6384'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });

            // Mesafe Karşılaştırma Bar Grafiği
            var ctx2 = document.getElementById('mesafeKarsilastirmaChart').getContext('2d');
            new Chart(ctx2, {
                type: 'bar',
                data: {
                    labels: chartData.departmanlar,
                    datasets: [{
                        label: 'Toplam Mesafe (km)',
                        data: chartData.mesafeler,
                        backgroundColor: '#36A2EB'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }
    }
</script>

