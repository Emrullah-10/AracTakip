@using System.Linq
@model List<AracTakipSistemi.Models.KullaniciAktiviteRaporu>
@{
    ViewData["Title"] = "Kullanıcı Aktivite Raporu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var filtre = ViewBag.Filtre as AracTakipSistemi.Models.RaporFiltre;
    var departmanlar = ViewBag.Departmanlar as List<string>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <h1 class="page-title">
                    <i class="fas fa-users"></i> Kullanıcı Aktivite Raporu
                </h1>
                <p class="page-description">Kullanıcıların randevu ve aktivite istatistikleri</p>
            </div>
        </div>
    </div>

    <!-- Filtreleme Paneli -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-filter"></i> Filtreleme Seçenekleri
                    </h5>
                </div>
                <div class="card-body">
                    <form method="get" id="filtreForm">
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Başlangıç Tarihi</label>
                                    <input type="date" class="form-control" name="BaslangicTarihi" 
                                           value="@(filtre?.BaslangicTarihi?.ToString("yyyy-MM-dd"))" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Bitiş Tarihi</label>
                                    <input type="date" class="form-control" name="BitisTarihi" 
                                           value="@(filtre?.BitisTarihi?.ToString("yyyy-MM-dd"))" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Departman</label>
                                    <select class="form-control" name="Departman">
                                        <option value="">Tümü</option>
                                        @if (departmanlar != null)
                                        {
                                            @foreach (var dep in departmanlar)
                                            {
                                                <option value="@dep">@dep</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Onay Durumu</label>
                                    <select class="form-control" name="OnayDurumu">
                                        <option value="">Tümü</option>
                                        <option value="Bekliyor">Bekliyor</option>
                                        <option value="Onaylandı">Onaylandı</option>
                                        <option value="Reddedildi">Reddedildi</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <div class="d-flex">
                                        <button type="submit" class="btn btn-primary mr-2">
                                            <i class="fas fa-search"></i> Filtrele
                                        </button>
                                        <a href="@Url.Action("KullaniciAktiviteRaporu", "Rapor")" class="btn btn-secondary">
                                            <i class="fas fa-times"></i> Temizle
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Rapor Tablosu -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar"></i> Kullanıcı Aktivite Detayları
                    </h5>
                    <div>
                        <span class="badge badge-info">Toplam: @Model.Count kullanıcı</span>
                        <button class="btn btn-success btn-sm ml-2" onclick="exportToExcel()">
                            <i class="fas fa-file-excel"></i> Excel İndir
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="raporTablosu">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Kullanıcı</th>
                                        <th>Departman</th>
                                        <th>Toplam Randevu</th>
                                        <th>Onaylandı</th>
                                        <th>Bekliyor</th>
                                        <th>Reddedildi</th>
                                        <th>Toplam Mesafe (km)</th>
                                        <th>Son Randevu</th>
                                        <th>Aktivite</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var maxRandevu = 1;
                                        if (Model.Any())
                                        {
                                            foreach (var item in Model)
                                            {
                                                if (item.ToplamRandevuSayisi > maxRandevu)
                                                {
                                                    maxRandevu = item.ToplamRandevuSayisi;
                                                }
                                            }
                                        }
                                    }
                                    @foreach (var kullanici in Model)
                                    {
                                        var oran = maxRandevu > 0 ? (kullanici.ToplamRandevuSayisi * 100 / maxRandevu) : 0;
                                        var aktiviteClass = oran > 75 ? "bg-success" : oran > 50 ? "bg-warning" : oran > 25 ? "bg-info" : "bg-danger";

                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="user-icon mr-2">
                                                        <i class="fas fa-user text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@kullanici.KullaniciAdi</strong>
                                                        <br>
                                                        <small class="text-muted">ID: @kullanici.KullaniciID</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge badge-secondary">@kullanici.Departman</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-primary">@kullanici.ToplamRandevuSayisi</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-success">@kullanici.OnaylananRandevuSayisi</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-warning">@kullanici.BekleyenRandevuSayisi</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-danger">@kullanici.ReddedilenRandevuSayisi</span>
                                            </td>
                                            <td>
                                                <strong>@kullanici.ToplamMesafe.ToString("N0")</strong> km
                                            </td>
                                            <td>
                                                @if (kullanici.SonRandevuTarihi.HasValue)
                                                {
                                                    @kullanici.SonRandevuTarihi.Value.ToString("dd/MM/yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar @aktiviteClass" role="progressbar" style="width: @oran%">
                                                        @oran.ToString("F0")%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Kullanıcı verisi bulunamadı</h5>
                            <p class="text-muted">Seçilen filtrelere göre hiçbir kullanıcı bulunamadı.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Geri Dönüş Butonu -->
    <div class="row mt-3">
        <div class="col-12">
            <a href="@Url.Action("Index", "Rapor")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Raporlara Dön
            </a>
        </div>
    </div>
</div>

<script>
    function exportToExcel() {
        var filtre = {
            BaslangicTarihi: $('input[name="BaslangicTarihi"]').val(),
            BitisTarihi: $('input[name="BitisTarihi"]').val(),
            Departman: $('select[name="Departman"]').val(),
            OnayDurumu: $('select[name="OnayDurumu"]').val()
        };

        // Form oluştur ve submit et
        var form = $('<form></form>');
        form.attr('method', 'post');
        form.attr('action', '@Url.Action("ExcelRapor", "Rapor")');
        
        // Rapor türü ekle
        form.append($('<input>').attr('type', 'hidden').attr('name', 'raporTuru').attr('value', 'KullaniciAktiviteRaporu'));
        
        // Filtre değerlerini ekle
        if (filtre.BaslangicTarihi) {
            form.append($('<input>').attr('type', 'hidden').attr('name', 'filtre.BaslangicTarihi').attr('value', filtre.BaslangicTarihi));
        }
        if (filtre.BitisTarihi) {
            form.append($('<input>').attr('type', 'hidden').attr('name', 'filtre.BitisTarihi').attr('value', filtre.BitisTarihi));
        }
        if (filtre.Departman) {
            form.append($('<input>').attr('type', 'hidden').attr('name', 'filtre.Departman').attr('value', filtre.Departman));
        }
        if (filtre.OnayDurumu) {
            form.append($('<input>').attr('type', 'hidden').attr('name', 'filtre.OnayDurumu').attr('value', filtre.OnayDurumu));
        }
        
        // Body'e ekle ve submit et
        $('body').append(form);
        form.submit();
        form.remove();
    }

    // DataTable ile tablo geliştirmesi
    $(document).ready(function() {
        if ($('#raporTablosu').length > 0) {
            $('#raporTablosu').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.3/i18n/Turkish.json"
                },
                "pageLength": 25,
                "order": [[2, "desc"]] // Toplam randevu sayısına göre sırala
            });
        }
    });
</script>

