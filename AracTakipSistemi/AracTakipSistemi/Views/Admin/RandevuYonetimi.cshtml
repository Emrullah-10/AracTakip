        function randevuDuzenle(randevuId) {
            // Randevu d√ºzenleme sayfasƒ±na y√∂nlendir
            window.location.href = '@Url.Action("RandevuDuzenle", "Admin")' + '?id=' + randevuId;
        }

        function randevuSil(randevuId) {
            if (confirm('Bu randevuyu silmek istediƒüinizden emin misiniz? Bu i≈ülem geri alƒ±namaz.')) {
                $.post('@Url.Action("RandevuSil", "Admin")', { id: randevuId }, function(result) {
                    if (result.success) {
                        location.reload();
                    } else {
                        alert('Randevu silinirken bir hata olu≈ütu.');
                    }
                });
            }
        }



        function filtreUygula() {
            var departmanFiltre = $('#departmanFiltre').val().toLowerCase();
            var tarihFiltre = $('#tarihFiltre').val();
            var aramaMetni = $('#aramaKutusu').val().toLowerCase();

            $('.randevu-satir').each(function() {
                var satir = $(this);
                var tarih = satir.data('tarih');
                var aramaVeri = satir.data('arama').toLowerCase();

                var departmanUygun = !departmanFiltre || aramaVeri.includes(departmanFiltre);
                var tarihUygun = !tarihFiltre || tarih === tarihFiltre;
                var aramaUygun = !aramaMetni || aramaVeri.includes(aramaMetni);

                if (departmanUygun && tarihUygun && aramaUygun) {
                    satir.show();
                } else {
                    satir.hide();
                }
            });
        }

        function filtreTemizle() {
            $('#departmanFiltre').val('');
            $('#tarihFiltre').val('');
            $('#aramaKutusu').val('');
            $('.randevu-satir').show();
        }

        // Randevu onaylama
        function randevuOnayla(randevuId) {
            if (confirm('Bu randevuyu onaylamak istediƒüinizden emin misiniz?')) {
                $.post('@Url.Action("RandevuOnayla", "Admin")', { id: randevuId }, function(result) {
                    if (result.success) {
                        alert(result.message);
                        location.reload();
                    } else {
                        alert(result.message || 'Randevu onaylanƒ±rken bir hata olu≈ütu.');
                    }
                }).fail(function() {
                    alert('Sunucu hatasƒ± olu≈ütu.');
                });
            }
        }





