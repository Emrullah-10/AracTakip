@{
    ViewData["Title"] = "Kullanıcı Ekle";
}

<link rel="stylesheet" href="~/css/kullanici-ekle.css" />

<div class="kullanici-ekle-container">
    <div class="kullanici-ekle-form-container">
        <div class="page-header fade-in-up">
            <h2><i class="fas fa-user-plus me-2"></i>Kullanıcı Ekle</h2>
        </div>
        
        <div class="main-card fade-in-up">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <i class="fas fa-user-plus fa-2x me-3"></i>
                    <div>
                        <h3 class="mb-1 fw-bold">Yeni Kullanıcı Ekle</h3>
                        <p class="mb-0 opacity-75">Sistem için yeni kullanıcı hesabı oluşturun</p>
                    </div>
                </div>
            </div>
                
            <div class="card-body">
                @if (ViewBag.Hata != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Hata
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                <form method="post" asp-action="KullaniciEkle" asp-controller="Admin">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label for="kullaniciAdi" class="form-label">
                                <i class="fas fa-user me-2"></i>Kullanıcı Adı
                            </label>
                            <input type="text" class="form-control" 
                                   id="kullaniciAdi" name="kullaniciAdi" required 
                                   placeholder="Kullanıcı adını giriniz">
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <label for="departman" class="form-label">
                                <i class="fas fa-building me-2"></i>Departman
                            </label>
                            <select class="form-select" id="departman" name="departman" required>
                                <option value="">Departman seçiniz</option>
                                <option value="Bilgi İşlem">Bilgi İşlem</option>
                                <option value="İnsan Kaynakları">İnsan Kaynakları</option>
                                <option value="Muhasebe">Muhasebe</option>
                                <option value="Pazarlama">Pazarlama</option>
                                <option value="Satış">Satış</option>
                                <option value="Üretim">Üretim</option>
                                <option value="Kalite Kontrol">Kalite Kontrol</option>
                                <option value="Ar-Ge">Ar-Ge</option>
                                <option value="Halkla İlişkiler">Halkla İlişkiler</option>
                                <option value="Güvenlik">Güvenlik</option>
                                <option value="Temizlik">Temizlik</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label for="sifre" class="form-label">
                                <i class="fas fa-lock me-2"></i>Şifre
                            </label>
                            <input type="password" class="form-control" 
                                   id="sifre" name="sifre" required 
                                   placeholder="Güçlü bir şifre belirleyin">
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <label for="rol" class="form-label">
                                <i class="fas fa-shield-alt me-2"></i>Kullanıcı Rolü
                            </label>
                            <select class="form-select" id="rol" name="rol">
                                <option value="false">Kullanıcı</option>
                                <option value="true">Admin</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a href="@Url.Action("KullaniciYonetimi", "Admin")" class="btn btn-outline-secondary me-md-2">
                                    <i class="fas fa-arrow-left me-2"></i>Geri Dön
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Kullanıcı Ekle
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
            
    </div>
</div> 