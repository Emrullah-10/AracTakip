@model int
@{
    ViewData["Title"] = "Araç Ata";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/arac-ata.css" />

<div class="arac-ata-container">
    <div class="arac-ata-form-container">
        <!-- Sayfa Başlığı -->
        <div class="page-header fade-in-up">
            <h2>
                <i class="fas fa-car me-3"></i>
                Araç Ata
            </h2>
            <p>
                <strong>Randevu ID: @Model</strong> için uygun aracı seçin
            </p>
        </div>

        <!-- Hata ve Başarı Mesajları -->
        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger fade-in-up">
                <i class="fas fa-exclamation-circle me-2"></i>
                @ViewBag.Hata
            </div>
        }

        @if (TempData["Basari"] != null)
        {
            <div class="alert alert-success fade-in-up">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["Basari"]
            </div>
        }

        <!-- Araç Seçim Formu -->
        <div class="main-card fade-in-up">
            <div class="card-header">
                <h3><i class="fas fa-list me-2"></i>Araç Seçimi</h3>
                <p>Müsait araçlar arasından seçim yapın</p>
            </div>
            <div class="card-body">
                <form method="post" asp-action="AracAtaSayfa" asp-controller="Admin">
                    <input type="hidden" name="randevuId" value="@Model" />
                    
                    <div class="form-group">
                        <label for="aracId" class="form-label">
                            <i class="fas fa-list me-2"></i>Müsait Araçlar <span style="color: #ff6b6b;">*</span>
                        </label>
                        <select class="form-select" name="aracId" id="aracId" required>
                            <option value="">-- Araç Seçiniz --</option>
                            @if (ViewBag.MusaitAraclar != null)
                            {
                                foreach (var arac in ViewBag.MusaitAraclar)
                                {
                                    <option value="@arac.ID">@arac.Marka @arac.Model (@arac.Plaka)</option>
                                }
                            }
                        </select>
                        <div class="password-help">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Not:</strong> Sadece müsait durumda olan araçlar gösterilmektedir.
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary me-3">
                            <i class="fas fa-check me-2"></i>Araç Ata
                        </button>
                        <a href="@Url.Action("RandevuYonetimi", "Admin")" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Araç seçimi değiştiğinde bilgi göster
        $('#aracId').on('change', function() {
            var selectedOption = $(this).find('option:selected');
            if (selectedOption.val()) {
                console.log('Seçilen araç:', selectedOption.text());
            }
        });
    </script>
} 