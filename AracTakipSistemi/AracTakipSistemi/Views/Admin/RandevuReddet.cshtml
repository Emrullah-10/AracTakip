@model int
@{
    ViewData["Title"] = "Randevu Reddet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/randevu-reddet.css" />

<div class="randevu-reddet-container">
    <div class="randevu-reddet-form-container">
        <!-- Sayfa Başlığı -->
        <div class="page-header fade-in-up">
            <h2>
                <i class="fas fa-times-circle me-3"></i>
                Randevu Reddet
            </h2>
            <p>
                <strong>Randevu ID: @Model</strong> için red sebebini belirtin
            </p>
        </div>

        <!-- Hata ve Başarı Mesajları -->
        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger fade-in-up">
                <i class="fas fa-exclamation-circle me-2"></i>
                @ViewBag.Hata
            </div>
        }

        @if (TempData["Basari"] != null)
        {
            <div class="alert alert-success fade-in-up">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["Basari"]
            </div>
        }

        <!-- Red Sebebi Formu -->
        <div class="main-card fade-in-up">
            <div class="card-header">
                <h3><i class="fas fa-comment me-2"></i>Red Sebebi</h3>
                <p>Randevunun neden reddedildiğini açıklayın</p>
            </div>
            <div class="card-body">
                <form method="post" asp-action="RandevuReddetSayfa" asp-controller="Admin">
                    <input type="hidden" name="randevuId" value="@Model" />
                    
                    <div class="form-group">
                        <label for="redSebebi" class="form-label">
                            <i class="fas fa-comment me-2"></i>Red Sebebi <span style="color: #ff6b6b;">*</span>
                        </label>
                        <textarea class="form-control" name="redSebebi" id="redSebebi" rows="6" 
                                  placeholder="Randevunun neden reddedildiğini detaylı olarak açıklayın..." required></textarea>
                        <div class="password-help">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Not:</strong> Bu açıklama kullanıcıya gösterilecektir. Lütfen açık ve anlaşılır bir şekilde yazın.
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-danger me-3">
                            <i class="fas fa-times me-2"></i>Randevuyu Reddet
                        </button>
                        <a href="@Url.Action("RandevuYonetimi", "Admin")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form gönderilmeden önce onay iste
        $('form').on('submit', function(e) {
            var redSebebi = $('#redSebebi').val().trim();
            
            if (!redSebebi) {
                alert('❌ Red sebebi belirtilmelidir.');
                e.preventDefault();
                return false;
            }
            
            if (!confirm('⚠️ Bu randevuyu reddetmek istediğinizden emin misiniz?\n\nRed Sebebi: ' + redSebebi)) {
                e.preventDefault();
                return false;
            }
            
            // Loading state başlat
            var submitBtn = $(this).find('button[type="submit"]');
            var originalText = submitBtn.html();
            submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Reddediliyor...');
        });
    </script>
} 